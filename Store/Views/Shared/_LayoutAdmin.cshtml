<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="shortcut icon" href="@Url.Content("~/ball.ico")" type="image/x-icon">
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-1.9.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
</head>
<body>
    <!--begin #container-->
    <div id="container">
        <!-- begin #header -->
        <div id="header">
            <div class="items">             
                <ul> 
                    <li>@Html.Partial("_LogOnPartial")</li> 
                </ul>
            </div>
            <div class="logo">
                <img src="@Url.Content("~/Content/cart1.png")"/>
            </div>
        
            <br class="clearfloat" />

            <div id="navcontainer">
                <ul id="navlist">
                    <li class="first"><a href="@Url.Content("~")" id="current">Main</a></li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    @if (Request.IsAuthenticated && User.IsInRole("Administrator"))
                    {
                        <li>@Html.ActionLink("Admin", "Index", "Product")</li>
                    }
                </ul>
            </div>
        </div>
        <!-- end #header -->
        <!-- begin #sidebar1 -->
        <div id="sidebar1">
            <h2>Catalogues</h2>
            <ul id="sidebarlist">
                <li>@Html.ActionLink("Products", "Index", "Product")</li>
                <li>@Html.ActionLink("Categories", "Index", "Category")</li>
                <li>@Html.ActionLink("Orders", "Index", "Order")</li>
            </ul>
        </div>
        <!-- end #sidebar1 -->
        <!-- begin #mainContent -->
        <div id="mainContent">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <!-- end #mainContent -->
        <br class="clearfloat" />
    </div>
    <!-- end #container -->
    <!-- begin #footer -->
    <div id="footer">
        <div class="footerBody">
            <div class="copyright">
                Copyright &copy; @DateTime.Now.Year  Sport Store.
            </div>
        </div>
    </div>
    <!-- end #footer -->
    @RenderSection("scripts", required: false)
</body>
</html>
