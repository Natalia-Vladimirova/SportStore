@model IEnumerable<Store.Models.Categ>

@helper Truncate(string input, int length)
{
     if (input.Length <= length)
     {
        @input
     }
     else
     {
        @input.Substring(0, length)<text>...</text>
     }
} 
@{
    ViewBag.Title = "Admin-категории";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br>
<p>
    @Html.ActionLink("Создать новую категорию", "Create")
</p>
<br>
<div class="adminTabCat">
<table>
    <tr>
        <th>
            Категории:
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
             @Truncate(item.Category, 50)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.CategId }) | 
            @Html.ActionLink("Удалить", "Delete", new { id=item.CategId })
        </td>
    </tr>
}

</table>
</div>