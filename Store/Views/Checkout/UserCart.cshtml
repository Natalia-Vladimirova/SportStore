@model IEnumerable<Store.Models.OrderDetail>
@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Orders of the user: @ViewBag.Username</h2>

<table>
    @foreach (var orderId in Model.Select(i => i.Order.OrderId).Distinct())
    {
        <tr>
            <td>
                The order # @Html.DisplayFor(i => orderId)
                @Html.ActionLink("Details", "UserCartDetails", "Checkout", new { id = orderId }, "")
            </td>
        </tr>
        <tr><td>---------------------------------</td></tr>
    }
</table>
